<?xml version="1.0" encoding="utf-8"?>
<!--
    Widget preview image for widget picker
    Phase 9: Home Screen Widgets
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/widget_background"/>
            <corners android:radius="16dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/widget_border"/>
        </shape>
    </item>
    
    <!-- Simulated text placeholder (habit name area) -->
    <item
        android:top="12dp"
        android:left="16dp"
        android:right="16dp"
        android:bottom="52dp">
        <shape android:shape="rectangle">
            <solid android:color="#EEEEEE"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
    
    <!-- Simulated button -->
    <item
        android:top="56dp"
        android:bottom="12dp"
        android:left="40dp"
        android:right="40dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/widget_button_default"/>
            <corners android:radius="18dp"/>
        </shape>
    </item>
</layer-list>
